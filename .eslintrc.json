  {
    "extends": [
      "prettier",
      "plugin:node/recommended"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "endOfLine": "auto"
        }
      ],
      "endOfLine": "off",
      "no-console": "off",
      "consistent-return": "off",
      "func-names": "off",
      "object-shorthand": "off",
      "no-process-exit": "off",
      "no-return-await": "off",
      "no-underscore-dangle": "off",
      "class-methods-use-this": "off",
      "parserOptions": {
          "sourceType": "module"
        },
      "prefer-destructuring": [
        "error",
        {
          "object": true,
          "array": false
        }
      ],
      "no-unused-vars": [
        "off",
        {
          "argsIgnorePattern": "req|res|next|val"
        }
      ]
    }
  }